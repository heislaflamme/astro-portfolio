---
import Image from "astro/components/Image.astro";
import home from "../../public/icons8-windows-11.svg";
import search from "../../public/icons8-search.svg";
import skills from "../../public/icons8-problem-solving-skills-96.svg";
import projects from "../../public/chart-decrease-svgrepo-com.svg";
import about from "../../public/id-card-identification-svgrepo-com.svg";
import contact from "../../public/message-svgrepo-com.svg";
import wifi from "../../public/wifi.svg";
import volume from "../../public/speaker-filled-audio-tool.svg";
import battery from "../../public/half-battery.svg";
import cellular from "../../public/cellular-svgrepo-com.svg"
---
<div class="flex relative min-lg:hidden">

<div class="relative top-0 bg-black h-[4vh] rounded-b-2xl  w-[30vw] m-auto"></div>

<div class="absolute top-0 left-0 mx-[2vw] mt-[1vw] text-white w-[15vw] text-[0.8rem]">
 { new Date().toLocaleTimeString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true})}
</div>

<div class="flex absolute gap-1 mx-[2vw] mt-[1vw] top-0 right-0 w-[15vw] text-[0.8rem]">
   <Image src={cellular} loading="eager" width={17} alt="search icon" class="ml-2"/>
   <p class="text-white">LTE</p>
   <Image src={battery} loading="eager" width={17} alt="search icon" class="ml-2"/>
</div>

</div>

<nav class="flex fixed w-full justify-center h-[50px] bottom-0 p-[6px]">

     <div class="flex gap-2 items-center justify-center h-full m-auto max-lg:hidden">
        <a href="/" class="win-home w-12 h-10 flex items-center justify-center"><Image src={home} width={35} loading="eager" alt="windows home icon"/></a>

        <div class="win-search flex items-center justify-center rounded-2xl w-25 h-[30px] text-center text-white">
            <Image src={search} loading="eager" width={17} alt="search icon" class="ml-2"/>
              <p class="mx-2 text-[12px]">Search</p>
        </div>

        <a href="/" class="win-home w-12 h-10 flex items-center justify-center"><Image src={skills} width={35} loading="eager" alt="windows home icon"/></a>

        <a href="/" class="win-home w-12 h-10 flex items-center justify-center"><Image src={projects} width={35} loading="eager" alt="windows home icon"/></a>

        <a href="/" class="win-home w-12 h-10 flex items-center justify-center"><Image src={about} width={35} loading="eager" alt="windows home icon"/></a>

        <a href="/" class="win-home w-12 h-10 flex items-center justify-center"><Image src={contact} width={35} loading="eager" alt="windows home icon"/></a>
     
     

     <div class="flex gap-5 items-center absolute right-[2%]">
        <div class="flex gap-2">
         <Image src={wifi} width={16} height={16} class="" alt="icons"/>
         <Image src={volume} width={16} height={16} class="" alt="icons"/>
         <Image src={battery} width={16} height={16} class="" alt="icons"/>
        </div>

        <div class="text-[11px] text-white">
         { new Date().toLocaleTimeString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true})}
         <br>
         { new Date().toLocaleDateString('en-GB') }
        </div>
     </div>

     </div>
</nav>