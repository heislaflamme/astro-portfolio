---
import Layout from "../layouts/layout.astro";
import Image from "astro/components/Image.astro";
import lost from "../../public/404.png";
---

<Layout title="404: NOT FOUND">
  <div class="flex flex-col h-[92dvh] max-lg:h-[80dvh]">
    <br />
    <br />
    <br />
    <div class="mt-[15dvh]">
      <Image
        src={lost}
        alt="404"
        width={200}
        loading="eager"
        class="relative left-1/2 -translate-x-1/2"
      />
      <br />
      <div>
        <p class="text-white text-center">
          <a href="/">Click to go to home page</a>
        </p>
      </div>
    </div>
  </div>
</Layout>
