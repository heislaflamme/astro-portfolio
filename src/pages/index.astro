    0% {
      transform: rotate(0);
    }

    80% {
      transform: rotate(400deg);
    }

    100% {
      transform: rotate(360deg);
    }
  }
  @keyframes scale {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.02);
    }
  }
  @keyframes hover {
    from {
      transform: translateY(0px);
    }

    to {
      transform: translateY(-10px);
    }
  }
  @media (max-width: 1023px) {
    #search {
      background-color: rgba(75, 73, 73, 0.966);
      box-shadow: none;
    }
    .app {
      width: 90%;
      height: 95%;
      bottom: 0;
    }
    .s-icons:active {
      background-color: rgba(134, 134, 129, 0.562);
    }
