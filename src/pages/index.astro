</style>

<script>
  //my windows search
  document.addEventListener("DOMContentLoaded", () => {
    const input = document.getElementById("input") as HTMLInputElement;
    const apps = document.querySelectorAll("#search .flex > div"); // each app container

    input.addEventListener("input", () => {
      const query = input.value.toLowerCase().trim();

      apps.forEach((app) => {
        const p = app.querySelector("p");
        const label =
          p && p.textContent ? p.textContent.toLowerCase().trim() : "";

        // Show all when input is empty, otherwise filter
        if (query === "" || label.includes(query)) {
          (app as HTMLElement).style.display = "flex";
        } else {
          (app as HTMLElement).style.display = "none";
        }
      });
    });

    // Reset the display when search is closed
    const searchElement = document.getElementById("search");
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.attributeName === "class") {
          const hasHideClass = (
            mutation.target as HTMLElement
          ).classList.contains("hide");
          if (hasHideClass) {
            // Reset all apps to visible when search closes
            apps.forEach((app) => {
              (app as HTMLElement).style.display = "flex";
            });
            // Clear the input
            input.value = "";
          }
        }
      });
    });

    if (searchElement) {
      observer.observe(searchElement, { attributes: true });
    }
  });
</script>
